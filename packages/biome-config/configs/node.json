{
 "$schema": "https://biomejs.dev/schemas/latest/schema.json",
 "extends": ["./base.json", "./typescript.json"],
 "linter": {
  "enabled": true,
  "rules": {
   "recommended": false,
   "a11y": {},
   "complexity": {
    "useLiteralKeys": "error"
   },
   "correctness": {
    "noUnusedImports": "error",
    "noGlobalObjectCalls": "error"
   },
   "nursery": {},
   "performance": {
    "noAccumulatingSpread": "error",
    "noDelete": "warn",
    "noReExportAll": "error"
   },
   "security": {
    "noGlobalEval": "error"
   },
   "style": {
    "useConst": "error"
   },
   "suspicious": {
    "noConsole": "warn",
    "noDebugger": "error",
    "noGlobalAssign": "error"
   }
  }
 }
}
